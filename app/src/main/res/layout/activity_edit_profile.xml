<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/nature_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_header"
            android:text="Edit User Information!"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="50dp"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint="Username"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_below="@id/signup_header"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="text"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailEditText"
            android:hint="Email"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_below="@id/username"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="text"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactEditText"
            android:hint="Contact no."
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_below="@id/emailEditText"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="phone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dobEditText"
            android:hint="Date of Birth"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_below="@id/genderEditText"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="true"
            />

        <RadioGroup
            android:id="@+id/genderEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/contactEditText"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Male"
                android:textColor="@color/white"
                />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Female"
                android:textColor="@color/white"
                />
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_btn"
            android:text="Confirm Changes"
            android:layout_below="@id/dobEditText"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:padding="10dp"
            android:background="@drawable/rounded_button"
            />

    </RelativeLayout>

</ScrollView>