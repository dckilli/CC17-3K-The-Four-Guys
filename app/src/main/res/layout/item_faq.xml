<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/faqLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="RedundantNamespace">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sagada Travel FAQS"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="30dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do I get to Sagada?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:justificationMode="inter_word"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/answerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• To reach Sagada, travel from Manila to Baguio City by bus (around 6-8 hours). From Baguio, take a bus or van to Sagada (approximately 5-6 hours)• There are also direct bus services from Manila to Sagada (Coda Lines)."
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:justificationMode="inter_word"
            tools:ignore="HardcodedText,UnusedAttribute,VisualLintLongText" />

    </LinearLayout>
</ScrollView>
